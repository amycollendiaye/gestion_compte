{
    "openapi": "3.0.0",
    "info": {
        "title": "Gestion Compte API",
        "description": "API pour la gestion des comptes bancaires",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000/",
            "description": "Serveur de développement"
        }
    ],
    "paths": {
        "/ndiaye/api/v1/comptes": {
            "get": {
                "tags": [
                    "Comptes"
                ],
                "summary": "Lister les comptes",
                "description": "Récupère une liste paginée des comptes bancaires",
                "operationId": "listComptes",
                "parameters": [
                    {
                        "name": "limit",
                        "in": "query",
                        "description": "Nombre d'éléments par page",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": 5,
                            "maximum": 100,
                            "minimum": 1
                        }
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Numéro de la page",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": 1,
                            "minimum": 1
                        }
                    },
                    {
                        "name": "type",
                        "in": "query",
                        "description": "Type de compte (courant, epargne, cheque)",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "enum": [
                                "courant",
                                "epargne",
                                "cheque"
                            ]
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Liste des comptes récupérée avec succès",
                        "content": {
                            "application/json": {
                                "schema": {}
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Comptes"
                ],
                "summary": "Créer un nouveau compte",
                "description": "Crée un nouveau compte bancaire avec les informations du client",
                "operationId": "createCompte",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {}
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Compte créé avec succès",
                        "content": {
                            "application/json": {
                                "schema": {}
                            }
                        }
                    },
                    "422": {
                        "description": "Données invalides",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": false
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Les données fournies sont invalides"
                                        },
                                        "error": {
                                            "properties": {
                                                "code": {
                                                    "type": "string",
                                                    "example": "VALIDATION_ERROR"
                                                },
                                                "details": {
                                                    "type": "object"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Erreur serveur",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": false
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "SERVER_ERROR"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/ndiaye/api/v1/comptes/{numero}": {
            "get": {
                "tags": [
                    "Comptes"
                ],
                "summary": "Rechercher un compte par numéro",
                "description": "Récupère les détails d'un compte bancaire spécifique par son numéro",
                "operationId": "getCompteByNumero",
                "parameters": [
                    {
                        "name": "numero",
                        "in": "path",
                        "description": "Numéro du compte bancaire",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Compte trouvé avec succès",
                        "content": {
                            "application/json": {
                                "schema": {}
                            }
                        }
                    }
                }
            }
        },
        "/ndiaye/api/v1/comptes/telephone/{telephone}": {
            "get": {
                "tags": [
                    "Comptes"
                ],
                "summary": "Rechercher un compte par téléphone",
                "description": "Récupère les détails d'un compte bancaire par le numéro de téléphone du client",
                "operationId": "getCompteByTelephone",
                "parameters": [
                    {
                        "name": "telephone",
                        "in": "path",
                        "description": "Numéro de téléphone du client",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Compte trouvé avec succès"
                    }
                }
            }
        }
    },
    "components": {
        "responses": {
            "500": {
                "description": "Erreur serveur",
                "content": {
                    "application/json": {
                        "schema": {}
                    }
                }
            },
            "404": {
                "description": "Aucun compte trouvé",
                "content": {
                    "application/json": {
                        "schema": {}
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "Comptes",
            "description": "Gestion des comptes bancaires wane"
        }
    ]
}